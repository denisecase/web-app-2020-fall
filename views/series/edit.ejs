<!--
*  Series edit view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to edit a series.
*
* @author Nithya Karepe<s540109@nwmissouri.edu>
-->

<div class="card">
    <div class="card-header">
      Edit Series
    </div>
    <div class="card-body">
      <form action="/series/save/<%= series.id %>" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= series.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="seasons">Seasons:</label>
          <input type="number" class="form-control" id="seasons" name="seasons" value="<%= series.seasons %>" min=1 max=100 step=1 default=2
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= series.isComedy %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Comedy?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
      </form>
    </div>
  </div>