<!--
*  Series create view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to create a new series.
*
* @author Nithya Karepe<s540109@nwmissouri.edu>
-->

<% if (series && series.error) { %>
    <div class="alert alert-danger" role="alert"><%- JSON.stringify(series.error) %></div>
    <% } %>
  
  <div class="card">
    <div class="card-header">
      Add Series
    </div>
    <div class="card-body">
      <form action="/series/save" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= series.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="seasons">Seasons:</label>
          <input type="number" class="form-control" id="seasons" name="seasons" value="<%= series.age %>" min=1 max=100 step=1 default=1
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= series.isComedy %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Comedy?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
        </div>
      </form>
    </div>
  </div>