<% if (tea && tea.error) { %>
    <div class="alert alert-danger" role="alert"><%- JSON.stringify(tea.error) %></div>
    <% } %>
  
  <div class="card">
    <div class="card-header">
      Add a Tea
    </div>
    <div class="card-body">
      <form action="/tea/save" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= tea.name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="pricePerGram">Price Per Gram:</label>
          <input type="number" class="form-control" id="pricePerGram" name="pricePerGram" value="<%= tea.pricePerGram %>" min=0.01 max=100.0 step=0.01 default=0.5
            autocomplete="off">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= tea.isPuer %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Puer?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
        </div>
      </form>
    </div>
  </div>
