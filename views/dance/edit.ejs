<!--
*  Dance edit view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to edit a dance.
*
* @author Denise Case <dcase@nwmissouri.edu>
-->

<div class="card">
    <div class="card-header">
      Edit Dance
    </div>
    <div class="card-body">
      <form action="/dance/save/<%= dance.id %>" method="post">
        <div class="form-group">
          <label for="form">Form:</label>
          <input type="text" class="form-control" id="form" name="form" value="<%= dance.form %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="YearInfo">YearInfo:</label>
          <input type="number" class="form-control" id="YearInfo" name="YearInfo" value="<%= dance.YearInfo %>">
        </div>
        <br>
        <!-- Checked checkbox -->
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="checkbox" value="<%= dance.isTraditional %>" checked />
          <label class="form-check-label" for="checkbox">
            Is Traditional?
          </label>
        </div>
        <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
      </form>
    </div>
  </div>