-->
  
<% if (dance.error) { %>
  <div class="alert alert-danger" role="alert"><%- dance.error %></div>
  <% } %>
  
  <div class="card-body">
  
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Form</th>
          <th scope="col">Year Info</th>
          <th scope="col">Is Traditional</th>
          <th width=>Action</th>
        </tr>
      </thead>
      <tbody>
  
        <tr>
          <th scope="row"><%= dance.id %></th>
          <td><%= dance.form%></td>
          <td><%= dance.yearInfo%></td>
          <td><%= dance.isTraditional%></td>
          <td>
            <form action="/dance/delete/<%= dance.id%>" method="post">
              <input type="submit" class="btn btn-danger delete" value="Delete" onclick="return alert('Are You sure?')"/>
            </form>
          </td>
        </tr>
  
      </tbody>
    </table>
  