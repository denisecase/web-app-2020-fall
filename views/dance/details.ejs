<!--
*  Dance details view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to display a dance.
*
* @author Denise Case <dcase@nwmissouri.edu>
-->

<% if (dance.error) { %>
    <div class="alert alert-danger" role="alert"><%- dance.error %></div>
    <% } %>
    
    <div class="card-body">
    
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">form</th>
            <th scope="col">YearInfo</th>
            <th scope="col">isTraditional</th>
            <th >Action</th>
          </tr>
        </thead>
        <tbody>
    
          <tr>
            <th scope="row"><%= dance.id %></th>
            <td><%= dance.form%></td>
            <td><%= dance.yearInfo%></td>
            <td><%= dance.isTraditional%></td>
            <td>
              <a class="btn btn-success edit" href="/dance">Done</a>
            </td>
          </tr>
    
        </tbody>
      </table>
    