<% if (dance.error) { %>
    <div class="alert alert-danger" role="alert"><%- dance.error %></div>
    <% } %>
    
    <div class="card-body">
    
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">IsCartoon</th>
            <th >Action</th>
          </tr>
        </thead>
        <tbody>
    
          <tr>
            <th scope="row"><%= dance.id %></th>
            <td><%= dance.name%></td>
            <td><%= dance.age%></td>
            <td><%= dance.isCartoon%></td>
            <td>
              <a class="btn btn-success edit" href="/dance">Done</a>
            </td>
          </tr>
    
        </tbody>
      </table>
    