<!--
*  Video Game create view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to create a new videogame.
*
* @author Kunal Vohra <s5407876@nwmissouri.edu>
     -->

<% if (videogame && videogame.error) { %>
     <div class="alert alert-danger" role="alert"><%- JSON.stringify(videogame.error) %></div>
     <% } %>
   
   <div class="card">
     <div class="card-header">
       Add Video Game
     </div>
     <div class="card-body">
       <form action="/videogame/save" method="post">
         <div class="form-group">
           <label for="name">Name</label>
           <input type="text" class="form-control" id="name" name="name" value="<%= videogame.name %>" autocomplete="off">
         </div>
         <div class="form-group">
           <label for="playersNeeded">Players Needed:</label>
           <input type="number" class="form-control" id="playersNeeded" name="playersNeeded" value="<%= videogame.playersNeeded %>" min=1 max=100 step=1 default=1
             autocomplete="off">
         </div>
         <br>
         <!-- Checked checkbox -->
         <div class="form-check">
           <input type="checkbox" class="form-check-input" id="checkbox" value="<%= videogame.isReleased %>" checked />
           <label class="form-check-label" for="checkbox">
             Is Released
           </label>
         </div>
         <br>
         <div class="form-group">
           <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
         </div>
       </form>
     </div>
   </div>