*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to create a new cricket.
*
* @author Praneeth Vallabhaneni <S541312@nwmissouri.edu>
-->

<% if (cricket && cricket.error) { %>
  <div class="alert alert-danger" role="alert"><%- JSON.stringify(cricket.error) %></div>
  <% } %>

<div class="card">
  <div class="card-header">
    Add cricket
  </div>
  <div class="card-body">
    <form action="/cricket/save" method="post">
      <div class="form-group">
        <label for="name">Player Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= cricket.name %>" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="age">Age:</label>
        <input type="number" class="form-control" id="age" name="age" value="<%= cricket.age %>" min=1 max=100 step=1 default=1
          autocomplete="off">
      </div>
      <br>
      <!-- Checked checkbox -->
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox" value="<%= cricket.isCartoon %>" checked />
        <label class="form-check-label" for="checkbox">
          Is AllRounder?
        </label>
      </div>
      <br>
      <div class="form-group">
        <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
      </div>
    </form>
  </div>
</div>