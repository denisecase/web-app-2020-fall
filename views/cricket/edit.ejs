<!--
*  cricket edit view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to edit a cricket.
*
* @author Denise Case <dcase@nwmissouri.edu>
-->

<div class="card">
  <div class="card-header">
    Edit Cricket
  </div>
  <div class="card-body">
    <form action="/cricket/save/<%= cricket.id %>" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= cricket.name %>" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="age">Age:</label>
        <input type="number" class="form-control" id="age" name="age" value="<%= cricket.age %>" min=1 max=100 step=1 default=2
          autocomplete="off">
      </div>
      <br>
      <!-- Checked checkbox -->
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox" value="<%= cricket.isCartoon %>" checked />
        <label class="form-check-label" for="checkbox">
          Is AllRounder?
        </label>
      </div>
      <br>
      <div class="form-group">
        <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
      </div>
    </form>
  </div>
</div>