-->

  
<% if (cricket.error) { %>
    <div class="alert alert-danger" role="alert"><%- cricket.error %></div>
    <% } %>
    
    <div class="card-body">
    
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">IsCricket</th>
            <th width=>Action</th>
          </tr>
        </thead>
        <tbody>
    
          <tr>
            <th scope="row"><%= cricket.id %></th>
            <td><%= cricket.name%></td>
            <td><%= cricket.age%></td>
            <td><%= cricket.isCricket%></td>
            <td>
              <form action="/cricket/delete/<%=cricket.id%>" method="post">
                <input type="submit" class="btn btn-danger delete" value="Delete" onclick="return alert('Are You sure?')"/>
              </form>
            </td>
          </tr>
    
        </tbody>
      </table>
    